# Server Configuration
PORT=3000
NODE_ENV=development

# Database
MONGODB_URI=mongodb://localhost:27017/food-companion

# JWT
JWT_SECRET=your-super-secret-jwt-key-here
JWT_EXPIRES_IN=7d

# Kakao API
KAKAO_REST_API_KEY=your-kakao-rest-api-key
KAKAO_JAVASCRIPT_KEY=your-kakao-javascript-key

# Social Login
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret

NAVER_CLIENT_ID=your-naver-client-id
NAVER_CLIENT_SECRET=your-naver-client-secret

# SMS Service (예: 네이버 클라우드 플랫폼)
SMS_SERVICE_ID=your-sms-service-id
SMS_ACCESS_KEY=your-sms-access-key
SMS_SECRET_KEY=your-sms-secret-key

# File Upload
UPLOAD_PATH=uploads/
MAX_FILE_SIZE=5242880

# Redis (채팅용)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=